<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/portadaPerfil"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:src="@drawable/paisaje4"
        />



    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/highlight_white"
        android:padding="5dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/nombrePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fotoPerfil"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="name:"/>

    <ImageView
        android:id="@+id/LikeIcon"
        android:layout_below="@+id/nombrePerfil"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/highlight_white"
        android:padding="5dp"
        android:src="@drawable/ic_thumb_up_black_48dp"
        android:tint="@color/SeriousGray"

        />

    <TextView
        android:id="@+id/likesPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LikeIcon"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:text="679 likes"
        />

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/nombrePerfil"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/ViveEn"
        android:layout_below="@+id/nombrePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Vive en:"
        />

    <TextView
        android:id="@+id/placeProfile"
        android:layout_below="@+id/ViveEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:text="Santiago (Chile)"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/highlight_white"
        />

    <TextView
        android:id="@+id/descripcionPerfil"
        android:layout_below="@+id/placeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="Descripcion"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/placeProfile"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/descripcionPerfil"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <TextView
        android:id="@+id/numberOfToursasGuide"
        android:layout_below="@+id/descripcionPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:text="0 tours guiados"
        />



    <TextView
        android:id="@+id/numberOfToursasClient"
        android:layout_below="@+id/numberOfToursasGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:text="0 tours como cliente"
        />





    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/numberOfToursasClient"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>




</RelativeLayout>

</ScrollView>