<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">




    <FrameLayout
        android:id="@+id/SearchContent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        />



    <ImageView
        android:id="@+id/backIcon"
        android:paddingRight="5dp"
        android:layout_width="40dp"
        android:paddingLeft="20dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/highlightbutton"
        android:src="@mipmap/ic_arrow_back_white_48dp"
        android:tint="@color/colorPrimary"
        />

    <TextView
        android:layout_toRightOf="@+id/backIcon"
        android:text="Crea tu propio tour"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/nombreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/SearchContent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Título"/>


    <EditText
        android:id="@+id/Precio"
        android:layout_below="@+id/nombreEditText"
        android:layout_width="390dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:hint="Precio"/>


    <EditText
        android:id="@+id/Descripcion"
        android:layout_below="@+id/Precio"
        android:layout_width="390dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:hint="Descripción"/>

    <TextView
        android:id="@+id/FotoAdd"
        android:layout_below="@+id/Descripcion"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir foto"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_add_a_photo_black_48dp"
        android:layout_toRightOf="@id/FotoAdd"
        android:layout_below="@+id/Descripcion"/>


    <Button
        android:id="@+id/crearTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/FotoAdd"
        android:text="Crear tour"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/highlightbutton"/>


</RelativeLayout>