<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/ProfilePortada"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:src="@drawable/paisaje4"
        />



    <ImageView
        android:id="@+id/ProfileImage"
        android:layout_below="@+id/SearchProfile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/highlight_white"
        android:padding="5dp"
        android:src="@drawable/juan"/>

    <TextView
        android:id="@+id/ProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfileImage"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="name:"/>

    <TextView
        android:id="@+id/ViveEn"
        android:layout_below="@+id/ProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:text="Vive en:"
        />

    <TextView
        android:id="@+id/placeProfile"
        android:layout_below="@+id/ViveEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:text="Santiago (Chile)"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/highlight_white"
        />


    <TextView
        android:id="@+id/numberOfTours"
        android:layout_below="@+id/placeProfile"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/Tours"
        android:layout_below="@+id/placeProfile"
        android:layout_toRightOf="@+id/numberOfTours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="tours"
        />

</RelativeLayout>